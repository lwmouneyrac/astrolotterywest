---
import Button from "./Button.astro";
import SearchGlass from "./SearchGlass.astro";
import { Icon } from "astro-icon/components";
---

<div>
    <div class="mb-12 flex-col bg-white p-10">
        <p class="text-sm">Search by text and date:</p>
        <div class="flex flex-wrap gap-4 items-center">
            <!-- Search input field -->
            <div class="relative flex-grow w-1/3">
                <input
                    id="searchInput"
                    type="text"
                    placeholder="Search by text"
                    class="w-full border border-gray-800 rounded py-2 px-12 text-sm focus:outline-none focus:border-primary"
                />
                <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                    <SearchGlass />
                </div>
            </div>

            <!-- Date range inputs -->
            <div class="relative flex gap-2 items-center w-1/3">
                <input
                    type="text"
                    placeholder="date range"
                    class="my-0 w-full border border-gray-800 rounded py-2 px-12 text-sm focus:outline-none focus:border-primary"
                />
                <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                    <Icon
                        class="text-secondary w-6 h-6 cursor-pointer"
                        name="calendar"
                    />
                </div>
            </div>

            <!-- Search button -->
            <Button
                label="Search"
                url="#"
                class="py-2 min-w-[170px] ml-0 my-2"
            />
        </div>
    </div>
</div>
