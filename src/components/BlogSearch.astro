---
import Button from "./Button.astro";
import SearchGlass from "./SearchGlass.astro";
import SearchResults from "./SearchResults.astro";
---

<div class="w-full">
    <!-- Search Form Section -->
    <div class="w-full mb-8 flex flex-col bg-white p-10">
        <p class="text-sm font-medium mb-2">Search by text and date:</p>
        <div class="flex flex-wrap gap-4 items-center">
            <!-- Search input field -->
            <div class="relative flex-grow min-w-[200px]">
                <input
                    type="text"
                    placeholder="Search by text"
                    class="w-full border border-gray-300 rounded py-2 px-12 text-sm focus:outline-none focus:border-primary"
                />
                <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                    <SearchGlass />
                </div>
            </div>
            
            <!-- Date range inputs -->
            <div class="flex gap-2 items-center">
                <input
                    type="text"
                    placeholder="date range"
                    class="w-full border border-gray-300 rounded py-2 px-12 text-sm focus:outline-none focus:border-primary"
                />
            </div>
            
            <!-- Search button -->
            <Button
                label="Search"
                url="#"
                class="!bg-primary !text-white !border-primary hover:!bg-primary/90 !m-0 !px-4 !py-1.5"
            />
        </div>
    </div>
    
    <!-- Search Results Grid -->
    <SearchResults />
</div>