---
import BlogCardRectangle from "./BlogCardRectangle.astro";
import BlogCardSquare from "./BlogCardSquare.astro";
import Button from "./Button.astro";

// Fake blog data for the grid
const blogPosts = [
  {
    title: "Latest Lottery Winners Announced",
    text: "Meet the lucky winners from last month's jackpot draw and hear their inspiring stories.",
    imageUrl: "https://images.unsplash.com/photo-1567427017947-545c5f8d16ad?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80",
    link: "#post-1"
  },
  {
    title: "How to Pick Your Lucky Numbers",
    text: "Learn the strategies that could increase your chances of winning big.",
    imageUrl: "https://images.unsplash.com/photo-1518133835878-5a93cc3f89e5?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80",
    link: "#post-2"
  },
  {
    title: "Community Projects Funded This Year",
    text: "Discover how lottery proceeds have made a difference in local communities across the region.",
    imageUrl: "https://images.unsplash.com/photo-1540575467063-178a50c2df87?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80",
    link: "#post-3"
  },
  {
    title: "Behind the Scenes: Draw Night",
    text: "An exclusive look at what happens during the live lottery draws.",
    imageUrl: "https://images.unsplash.com/photo-1606836591695-4d58a73eba1e?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80",
    link: "#post-4"
  },
  {
    title: "New Games Coming Soon",
    text: "Get a sneak peek at the exciting new lottery games launching next month.",
    imageUrl: "https://images.unsplash.com/photo-1561037404-61cd46aa615b?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80",
    link: "#post-5"
  },
  {
    title: "Lottery History: Biggest Jackpots",
    text: "A look back at some of the biggest jackpots in lottery history and the winners who claimed them.",
    imageUrl: "https://images.unsplash.com/photo-1524673450801-b5aa9b621b76?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80",
    link: "#post-6"
  },
  {
    title: "Responsible Gaming Tips",
    text: "Important advice on how to enjoy lottery games responsibly.",
    imageUrl: "https://images.unsplash.com/photo-1608111283890-abe5cdeea305?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80",
    link: "#post-7"
  },
  {
    title: "Retailer Spotlight",
    text: "Meet the local retailers who help bring lottery excitement to your neighborhood.",
    imageUrl: "https://images.unsplash.com/photo-1580913428706-c311e67898b3?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80",
    link: "#post-8"
  },
  {
    title: "Lottery Funds in Education",
    text: "How lottery proceeds are supporting educational initiatives in schools across the state.",
    imageUrl: "https://images.unsplash.com/photo-1503676260728-1c00da094a0b?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80",
    link: "#post-9"
  },
  {
    title: "Winners' Celebration Event",
    text: "Highlights from our annual event celebrating this year's big winners.",
    imageUrl: "https://images.unsplash.com/photo-1522542550221-31fd19575a2d?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80",
    link: "#post-10"
  },
  {
    title: "Your Odds Explained",
    text: "A straightforward explanation of lottery odds and what they really mean.",
    imageUrl: "https://images.unsplash.com/photo-1518133910546-b6c2fb7d79e3?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80",
    link: "#post-11"
  },
  {
    title: "Lottery App Updates",
    text: "New features coming to our mobile app to enhance your lottery experience.",
    imageUrl: "https://images.unsplash.com/photo-1553095066-5014bc7b7f2d?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80",
    link: "#post-12"
  }
];
---

<div class="w-full mb-12">
  <!-- Grid layout with alternating patterns -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 auto-rows-fr">
    {blogPosts.map((post, index) => {
      const rowIndex = Math.floor(index / 2);
      const isFirstInRow = index % 2 === 0;
      
      // Determine if this should be a rectangle or square card based on position
      const isRectangle = (rowIndex % 2 === 0 && isFirstInRow) || (rowIndex % 2 === 1 && !isFirstInRow);
      
      return (
        <div class={isRectangle ? "col-span-2" : "col-span-1"}>
          {isRectangle ? (
            <BlogCardRectangle 
              title={post.title}
              text={post.text}
              imageUrl={post.imageUrl}
              link={post.link}
            />
          ) : (
            <BlogCardSquare
              title={post.title}
              text={post.text}
              imageUrl={post.imageUrl}
              link={post.link}
            />
          )}
        </div>
      );
    })}
  </div>

  <!-- Load more button -->
  <div class="flex justify-center mt-10">
    <Button
      label="Load more"
      url="#"
      class="!bg-primary !text-white !border-primary hover:!bg-primary/90 !px-6 !py-2"
    />
  </div>
</div>